<div class="quiz" id="quiz-review" style="display:none;">
    <div class="main-div">
        <div class="black-div">
            <a href="#" id="show-result">
                <div class="arrow-back" id="show-result" ></div>
            </a>
       
            <div class="text-course-name" >ზოგადი უნარები</div>
            <div class="progress-numbers"><span data-bind="text: userAnswersCount() + '/' + questionCount()"></span></div>

      
        </div>
        <div class="main-background">
            <div class="burger-menu-video">
                <div class="burger-line-top-video"></div>
                <div class="burger-line-middle-video"></div>
                <div class="burger-line-bottom-video"></div>
            </div>
            <div class="test-main-div1" data-bind="foreach: questionsByTag">
                <div class="video-blocks-unarebi">
                    <div class="text-for-blocks-unarebi" data-bind="text : tagName"></div>
                </div>
                <!-- ko if: hasMultipleQuestions -->

                <div class="video-pre-blocks-unarebi" data-bind="click : $root.getPiroba.bind($data, {pirobaIndex : $index()}),
             css : { active : pirobaIndexer == $root.activeIndex() }">

                    <div class="text-for-pre-blocks-unarebi">ტექსტი</div>

                </div>
                <!-- /ko -->
                <!-- ko foreach: questions -->

                <div class="video-pre-blocks-unarebi" data-bind="click : $root.getQuestionByNum.bind($data, {index : index, questionId : id}),  css : { active : index == $root.activeIndex() }">
                    <div class="text-pre-video-length-unarebi" data-bind="text : num + '.'"></div>
                    <div class="text-for-pre-blocks-unarebi three-dot" data-bind="html :plainText"></div>
                    <div class="pre-circle-went-unarebi"><div class="numbers-right-went-unarebi" data-bind="text: answerL" ></div></div>
                </div>
                <!-- /ko -->


            </div>
            <div class="question-main-div">
                <div class="question-div  question-nav" >
                    <div class="text-question-div">
                        <div class="text-question1" data-bind="html : activeQuestion() &&  activeQuestion().QuestionText">მეწყერი : სტიქიური მოვლენა</div>
                    </div>
                </div>
                <div class="answers-div  question-nav" data-bind="foreach:  activeQuestion() && activeQuestion().answers">
                    <div class="answer-div">
                        <div class="variants" data-bind="css : { 'mistake'  :  !isCorrect &&  index == $root.activeAnswer(), 'correct' : isCorrect}">
                            <div class="" data-bind="html: L, css : { 'variant-char-white'  : isCorrect ,  'variant-char-white'  :  !isCorrect &&  index == $root.activeAnswer(), 
    'variant-char-gray' : !isCorrect && index != $root.activeAnswer() } "></div>
                        </div>
                        <div class="text-answer1" data-bind="html:answerString"> </div>
                    </div>

                </div>
                <div class="text-question-div1 piroba-nav" >
                    <div class="text-question2" data-bind="html : activePiroba() &&  activePiroba().piroba">


                    </div>
                </div>
            </div>
        </div>
        <div class="progress-main-div">
            <div class="progress-div-child">

                <button class="next-button1" data-bind="click: getNextQuestion.bind($data, {index : activeIndex(), questionId : activeQuestion() && activeQuestion().id}), visible: hasNextQuestion ">
                    <div class="text-previuos-next2" >შემდეგი</div>
                </button>
                <button class="previous-button1" data-bind="click: getPrevQuestion.bind($data, {index : activeIndex(), questionId : activeQuestion() && activeQuestion().id}), visible: hasPreviousQuestion">
                    <div class="text-previuos-next2" >წინა</div>
                </button>
            

            </div>
            @*<div class="progress-div-child1" data-bind="style : {display : showPiroba() ? 'block' : 'none'}, foreach : activePiroba() && activePiroba().questions">
                <span style="cursor:pointer;" data-bind="text : num, click : $root.getQuestionByNum.bind($data, {index : index, questionId : id})">01</span>
            </div>*@
        </div>
    </div>
    

    <div class="quisp" style="display:none;">
        <div class="quizpp">
            <div class="clossepop"></div>
            <div class="quzArea">
                <p class="ffs" data-bind="html : activeQuestion() && activeQuestion().multipleQuestionsText">

                </p>
            </div>
        </div>
    </div>
</div>




