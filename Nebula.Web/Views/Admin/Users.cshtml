@using PagedList;
@using PagedList.Mvc;
@model IPagedList<LeavingStone.GPI.Ecoist.Models.Registration>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2 style="margin-top: 40px; margin-bottom: 25px;float: left;display: inline;">სულ <b>@ViewBag.UsersCount</b></h2>

<form action="@Url.Action("Users")" method="get">
    <div style="margin-bottom:20px; clear:both; ">
        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">ძებნა</button>
            </span>
            <input name="search" type="text" class="form-control" placeholder="ძებნა...">
        </div><!-- /input-group -->
    </div>
</form>
@foreach (var user in Model)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-bordered">
                <tr>
             
                    <th>სახელი გვარი</th>
             
                    <th>მობილური</th>
                    <th>მანქანის ტიპი</th>
                    <th>ძრავის მოცულობა</th>


                    <th>წელი</th>
                    <th>ფასი</th>
          
                </tr>
                <tr>
                

                    <td>@user.Name</td>
                    <td>@user.Phone</td>
                    <td>@user.type</td>
                    <td>@user.engine</td>
                    <td>
                     @user.year
                    </td>

                    <td>
                     @user.price
                    </td>
              



                </tr>
            </table>
        </div>

    </div>

}

@Html.PagedListPager(Model, page => Url.Action("Users", new { page = page, search = ViewBag.Search }))

