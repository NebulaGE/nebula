@section scripts{
<script src="~/Scripts/video.min.js"></script>
<script>

    var videoPath = '@ViewBag.Video';
  
    if (videoPath) {
       $("#video-popup-file").html(
             ' <video controls  data-setup=\'{ "aspectRatio":"640:267", "playbackRates": [1, 1.5, 2] }\'' +
                 'class="video-js vjs-default-skin"> ' +
               '<source src="' + U + 'Content/explentation-videos/' + videoPath + '" type="video/mp4"></source>' +
             '</video>');
       $('#video-popup-container').fadeIn();
    }
    $('#video-popup-file').click(function (e) {
        e.stopPropagation();
    });

    $('#video-popup-close, #video-popup-container').click(function () {
        $('#video-popup-container').remove();
    });
	
	  var competitionId = '@ViewBag.Competition';
    if (competitionId) {
        $('.true-answer').fadeIn();

        $('#competition-phone')
	    .keydown(function (e) {
	    var key = e.charCode || e.keyCode || 0;
	    var  $phone = $(this);

	    // Auto-format- do not expose the mask as the user begins to type
	    if (key !== 8 && key !== 9) {
	        if ($phone.val().length === 3) {
	            $phone.val($phone.val() + ' ');
	        }
	        if ($phone.val().length === 7) {
	            $phone.val($phone.val() + ' ');
	        }

	    }

	    // Allow numeric (and tab, backspace, delete) keys only
	    return (key == 8 ||
				key == 9 ||
				key == 46 ||
				(key >= 48 && key <= 57) ||
				(key >= 96 && key <= 105));
	})

	  .bind('focus click', function () {
	    $phone = $(this);
	    var val = $phone.val();
	    $phone.val('').val(val); // Ensure cursor remains at the end

	})

   $('.close-true-answer').click(function () {
            $('.true-answer').fadeOut();
        });

    }
 
  </script>
