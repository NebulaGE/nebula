@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Nebula.Domain.Entities.UserLicense>
@{
    ViewBag.Title = "TBCTransactions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    double price = 0;
}

<h2 style="margin-top: 40px; margin-bottom: 25px;float: left;display: inline;">განხორციელებული ტრანზაქციები(TBC)</h2>
<h3 style="clear:both; ">სულ (TBC) შემოსავალი : @Model.Sum(m => (double) m.Price/100)  ლარი  </h3>
<h3 style="clear:both; padding-bottom:12px;">სულ (TBC) გაყიდული : @Model.Count()  </h3>
<form action="@Url.Action("TBCTransactions")" method="get">
    <div style="margin-bottom:20px; clear:both; ">
        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">ძებნა</button>
            </span>
            <input name="searchKeyword" type="text" class="form-control" placeholder="ძებნა...">
        </div><!-- /input-group -->
    </div>
</form>
@foreach (var transaction in Model)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-bordered">
                <tr>
                    <th>სახელი გვარი</th>
                    <th>მობილური</th>
                    <th>პირადი ნომერი</th>               
                    <th> ყიდვის თარიღი</th>
                    <th>თანხა</th>
                    <th>facebook link</th>
                    <th>google link</th>
                    <th>დაბრუნებულია თანხა? </th>
                  
                </tr>
                <tr>
                    <td>@transaction.User.FirstName  @transaction.User.LastName</td>
                    <td>@transaction.User.PhoneNumber</td>
                    <td>@transaction.User.IdentificationNumber</td>
                    <td>@transaction.BuyDate.ToString()</td>
                    <td><span>@{price = (double)transaction.Price / 100; <text>@price</text>}</span><span> ლარი</span></td>
                    <td>
                        @if (!string.IsNullOrEmpty(transaction.User.FacebookId))
                        {
                            <a href="https://www.facebook.com/@transaction.User.FacebookId" target="_blank">
                                https://www.facebook.com/@transaction.User.FacebookId
                            </a>
                        }                 
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(transaction.User.GoogleId))
                        {
                           @transaction.User.Email
                        }
                    </td>
               
                    <td>@Html.DisplayFor(m => transaction.Reversed)</td>

       
                  
                </tr>
            </table>   
        </div>

    </div>

}

@Html.PagedListPager(Model, page => Url.Action("TBCTransactions", new { page = page, searchKeyword = ViewBag.SearchKeyword }))

